/opt/monitor/op5/merlin/logs/*log {
	create 644 monitor apache
	weekly
	rotate 4
	sharedscripts
	missingok
	postrotate
		test -f /opt/monitor/var/run/nagios.lock
		mon_running=$?
		test -f /var/run/merlin.pid
		merlin_running=$?
		/etc/init.d/monitor stop
		/etc/init.d/merlind stop
		sleep 1
		test $merlin_running -eq 1 && nice -n 0 /etc/init.d/merlind start || :
		test $mon_running -eq 1 && nice -n 0 /etc/init.d/monitor start || :
	endscript
}
